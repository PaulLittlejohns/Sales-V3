@section scripts{
    <script type="text/javascript" src="~/Services/ProductScript.js "></script>
    <script>$(function () { OnLoad(); })</script>
}
<h2>All Products</h2>
<div style="width:800px; margin-left:auto; margin-right:auto">
    <button type="button" class="btn btn-success" data-bind="value: 'Create', click: function(){mouseClickCreate()}">Create</button>

    <p>&nbsp;</p>
    <table class="table table-bordered" >
        <thead>
            <tr>
                <th bg="color: white">Id</th>
                <th bg="color: white">Product Name</th>
                <th bg="color: white">Product Price</th>
                <th bgcolor="White" colspan="2" class="col-lg-1 col-centered"><p align="center">Action</p></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: producttable">
            <tr>
                <td data-bind="text:Id"></td>
                <td data-bind="text:ProductName"></td>
                <td data-bind="text:ProductCost"></td>
                <td>
                    <input type="button" id="edit" class="btn btn-success" data-bind="text: Id, value: 'Edit', click: function(){mouseClickEdit($data);}" />
                </td>
                <td>
                    <input type="button" id="delete" class="btn btn-danger" data-bind="text: Id, value: 'Delete', click: function(){mouseClickDelete($data);}" />
                </td>
            </tr>
        </tbody>
    </table>
</div>
@*Model Start*@
<div id="updatemodal" class="modal fade" role="dialog">
    <div class="modal-dialog" data-bind="with: selectedprod">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="modeltitle" class="modal-title" data-bind="text: modaltitle"></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <button type="button" class="btn btn-success" id="btnsave" data-bind = "click: function(){SaveChanges()}, enable: cansave, text: btnlabel"></button>
                    <div> 
                        <input id="productid" name="productid" hidden ="hidden" data-bind="value: productid">                    
                    </div>
                    <p>&nbsp;</p>
                    <div>
                        <h3 style="color:red">All fields must have a value</h3>
                    </div>
                    <p>&nbsp;</p>
                    <div>
                        <label>Name: </label>
                        <input type="text" id="productname" name="productname" style="width:400px" data-bind ="value: productname ">
                    </div>
                    <div>
                        <label>Price: </label>
                        <input type="text" id="productprice" name="productprice" style="width:400px"  data-bind ="value: productprice ">
                        <p style="color: red">Enter an amount greater than $1.00</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@*Model End*@
